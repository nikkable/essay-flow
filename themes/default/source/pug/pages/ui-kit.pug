                    .calendar-foot
                        button.btn.btn-primary Accept

                div(style="max-width: 200px;width: 100%;")
                    .field-dropdown-options
                        .field-checkbox.field-dropdown-checkbox
                            input(type="checkbox" id="item1")
                            label(for="item1") Menu item

                        .field-checkbox.field-dropdown-checkbox
                            input(type="checkbox" id="item2" checked)
                            label(for="item2") Menu item
                        .hr
                        button.field-dropdown-option.field-dropdown-option--radius Select all
